<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>StudentManagement</display-name>
 <welcome-file-list>
    <welcome-file>StudentController</welcome-file>
  </welcome-file-list>
  <servlet>
  	<servlet-name>StudentController</servlet-name>
  	<servlet-class>com.pn.trainning.controller.StudentController</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>StudentController</servlet-name>
  	<url-pattern>/student</url-pattern>
  </servlet-mapping>
  
  <context-param>
	<param-name>dbURL</param-name>
	<param-value>jdbc:mysql://localhost:3306/studentdb</param-value>
</context-param>

<context-param>
	<param-name>dbUsername</param-name>
	<param-value>root</param-value>
</context-param>

<context-param>
	<param-name>dbPassword</param-name>
	<param-value>phong12345</param-value>
